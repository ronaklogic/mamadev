<table>
<h2>Word</h2>
  <thead>
    <tr>
      <th>Name</th>
      <th align="center">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @alfabets.each do |alfabet| %>
      <tr>
        <td><%= alfabet.name %></td>    
        <td><%= button_to "Edit", edit_alfabet_path(alfabet.id), method: :get, class: "btn btn-success" %></td> 
        <td><%= button_to "Delete", alfabet_path(alfabet.id), method: :delete, class: "btn btn-danger" %></td>
        <td><%= button_to "show", alfabet_path(alfabet.id), method: :get, class: "btn btn-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table><br>

<%= link_to "new", new_alfabet_path, class: "btn btn-info"  %><br><br>



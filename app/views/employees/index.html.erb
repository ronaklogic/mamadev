<p style="color: green"><%= notice %></p>
  <h1>Employees</h1>
  <div class="col-md-10 text-left">
    <%= search_form_for @q do |form| %>
      <%= form.label :name_or_address_or_city_cont %>
      <%= form.search_field :name_or_address_or_city_cont %>
      <%= form.submit "search", class: "btn btn-primary" %>
      <%= sort_link(@q, :name) %>
    <% end %>
  <div class="col-md-10 text-right">
    <%= link_to "New employee", new_employee_path, class: "btn btn-outline-success" %>
  </div><br>
  <table class="table">
  <thead class="thead-dark">
    <th>Name</th>
    <th>mobile_no</th>
    <th>Address</th>
    <th>City</th>
    <th colspan="3">Action</th>
  </thead>
  <tbody>
    <% @employee.each do |employee| %>
      <tr>
      <td><%= employee.name %> </td>
      <td><%= employee.mobile_no %></td>
      <td><%= employee.address %></td>
      <td><%= employee.city %></td>

      <td><%= button_to "Edit", edit_employee_path(employee.id), method: :get, class: "btn btn-outline-primary" %></td>
      <td><%= button_to "Delete", employee_path(employee), method: :delete, class: "btn btn-outline-danger" %></td>
      <td><%= button_to "show", employee_path(employee.id), method: :get, class: "btn btn-outline-warning" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>

